<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <%- include('../../partials/flash-message') %>
        <div class="card w-100">
            <div class="card-body p-4">
                <h5 class="card-title fw-semibold mb-4">Users</h5>

                <!-- Search Bar -->
                <div class="input-group mb-3 gap-2">
                    <input type="text" class="form-control" id="searchInput" placeholder="Search users" />
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="button" id="searchButton">Search</button>
                    </div>
                </div>

                <!-- Filter Buttons -->
                <div class="btn-group mb-3" role="group">
                    <button type="button" class="btn btn-primary" data-status="all">All</button>
                    <button type="button" class="btn btn-primary" data-status="active">Active</button>
                    <button type="button" class="btn btn-primary" data-status="inactive">Inactive</button>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>S.No</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Mobile</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((element, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= element.firstName %></td>
                                <td><%= element.lastName %></td>
                                <td><%= element.email %></td>
                                <td><%= element.mobile %></td>
                                <td>
                                    <% if (element.isBlocked) { %>
                                    <a href="/admin/customer/block/<%= element._id %>" class="btn btn-danger">Blocked</a>
                                    <% } else { %>
                                    <a href="/admin/customer/block/<%= element._id %>" class="btn btn-success">Unblocked</a>
                                    <% } %>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-end">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                        </li>
                        <li class="page-item active" aria-current="page">
                            <a class="page-link" href="#">1 <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
