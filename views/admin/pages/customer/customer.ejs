<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center">
                <img
                    src="/admin/images/profile/user-1.jpg"
                    class="card-img-top mx-auto d-block img-fluid rounded-circle"
                    alt="User Image"
                    style="max-width: 150px; height: auto"
                />
                <div class="card-header"><%= user.firstName %> <%= user.lastName %></div>
                <div class="card-body">
                    <h5 class="card-title">First Name: <%= user.firstName %></h5>
                    <p class="card-text">Last Name: <%= user.lastName %></p>
                    <p class="card-text">Email: <%= user.email %></p>
                    <p class="card-text">Mobile: <%= user.mobile %></p>
                    <p class="card-text">Role: <%= user.role %></p>
                    <p class="card-text">Status: <% if (user.isBlocked) { %> Blocked <% } else { %> Active <% } %></p>
                    <p class="card-text">Created At: <%= new Date(user.createdAt).toUTCString() %></p>
                    <p class="card-text">Updated At: <%= new Date(user.updatedAt).toUTCString() %></p>
                </div>
            </div>
        </div>
    </div>
</div>
