<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <h5 class="card-title fw-semibold mb-4">Banner</h5>
                <div class="table-responsive">
                    <table id="bannerTable" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Image</th>
                                <th>Description</th>
                                <th>Link</th>
                                <th>Active</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% banners.forEach(banner => { %>
                            <tr>
                                <td><%= banner.title %></td>
                                <td><img src="<%= banner.image_url %>" alt="Banner 1 Image" style="max-width: 100px" /></td>
                                <td><%= banner.description %></td>
                                <td>
                                    <a href="<%= banner.link %>" target="_blank"><%= banner.link %></a>
                                </td>
                                <td><%= banner.active %></td>
                                <td>
                                    <%= new Date(banner?.start_date).toLocaleDateString('en-US', { year: 'numeric', month:
                                    'long', day: 'numeric' }) %>
                                </td>
                                <td>
                                    <%= new Date(banner?.end_date).toLocaleDateString('en-US', { year: 'numeric', month:
                                    'long', day: 'numeric' }) %>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#bannerTable").DataTable();
    });
</script>
