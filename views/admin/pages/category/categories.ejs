<div class="row">
    <%- include('../../partials/flash-message.ejs') %>

    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <h5 class="card-title fw-semibold mb-4">Categories</h5>
                <div class="table-responsive">
                    <% if (categories.length) { %>
                    <table id="categoryTable" class="table table-bordered">
                        <thead>
                            <tr>
                                <th class="text-center">S.No</th>
                                <th class="text-center">Category Name</th>
                                <th class="text-center">List / Unlist</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% categories.forEach((category, index) => { %>
                            <tr>
                                <td class="text-center"><%= index + 1 %></td>
                                <td class="text-center"><%= category.title %></td>
                                <td class="d-flex justify-content-between">
                                    <% if (category.isListed) { %> Listed <% } else { %> Not Listed <% } %> <% if
                                    (category.isListed) { %>
                                    <form method="post" action="/admin/category/unlist/<%= category._id %>?_method=PUT">
                                        <button type="submit" class="btn btn-sm btn-success">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </form>
                                    <% } else { %>
                                    <form method="post" action="/admin/category/list/<%= category._id %>?_method=PUT">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </form>
                                    <% } %>
                                </td>

                                <td class="text-center">
                                    <div class="d-flex justify-content-center align-items-center">
                                        <a
                                            href="/admin/category/edit/<%= category._id %>"
                                            class="btn btn-sm btn-primary ml-2"
                                        >
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form
                                            action="/admin/category/delete/<%= category._id %>?_method=DELETE"
                                            method="post"
                                        >
                                            <button type="submit" class="btn btn-sm btn-danger ml-2">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <% } else { %> No Categories <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#categoryTable").DataTable();
    });
</script>
