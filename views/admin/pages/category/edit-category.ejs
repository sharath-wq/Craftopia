<div class="row">
    <%- include('../../partials/flash-message.ejs') %>
        <div class="col-lg-12 d-flex align-items-stretch">
            <div class="card w-100">
                <div class="card-body p-4">
                    <h5 class="card-title fw-semibold mb-4">Edit Category</h5>
                    <div class="table-responsive">
                        <form action="/admin/category/edit/<%= category._id %>?_method=PUT" method="post">
                            <div class="mb-3">
                                <label for="categoryName" class="form-label">Category Name</label>
                                <input type="text" class="form-control" id="categoryName"
                                    placeholder="Enter category name" value="<%= category.title %>" name="title"
                                    required />
                            </div>
                            <div class="mb-3">
                                <label for="categoryStatus" class="form-label">Status</label>
                                <div class="form-check">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" value="true" name="isListed"
                                            id="list" <%=category.isListed===true ? 'checked' : '' %> />
                                        <label class="form-check-label" for="list">List</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" value="false" name="isListed"
                                            id="unlist" <%=category.isListed===false ? 'checked' : '' %> />
                                        <label class="form-check-label" for="unlist">Unlist</label>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Add Category</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</div>