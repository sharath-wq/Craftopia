<div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <h5 class="card-title fw-semibold mb-4">Orders</h5>
                <div class="table-responsive">
                    <table id="ordersTable" class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Order ID</th>
                                <th>Shipping Details</th>
                                <th>Date</th>
                                <th>Price</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% orders.forEach((order, index) => { %>
                            <tr>
                                <td class="align-middle"><%= index + 1 %></td>
                                <td class="align-middle"><%= order.orderId %></td>
                                <td class="align-middle">
                                    <%= order.shippingAddress %>, <%= order.city %>, <%= order.zip %>
                                </td>
                                <td class="align-middle">
                                    <%= new Date(order.orderedDate).toLocaleDateString('en-US', { year: 'numeric', month:
                                    'long', day: 'numeric' }) %>
                                </td>
                                <td class="align-middle"><%= order.totalPrice.toFixed(2) %></td>
                                <td class="align-middle">
                                    <a class="btn btn-sm btn-primary" href="/admin/orders/<%= order.orderId %>">Details</a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#ordersTable").DataTable();
    });
</script>
