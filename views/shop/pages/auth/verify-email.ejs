<!-- login-area start -->
<div class="register-area ptb-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 col-12 col-lg-6 col-xl-6 ms-auto me-auto">
                <%- include('../../partials/flash-message.ejs') %>
                <div class="login">
                    <h1 class="cart-heading">Verify Email</h1>
                    <div class="login-form-container">
                        <div class="login-form">
                            <form action="/auth/verify-email" method="post" id="otpForm">
                                <div class="form-group">
                                    <label for="otp">Enter OTP:</label>
                                    <input
                                        type="text"
                                        class="form-control"
                                        id="otp"
                                        name="otp"
                                        placeholder="Enter OTP"
                                        required
                                    />
                                </div>
                                <div class="button-box">
                                    <button type="submit" class="default-btn floatright">Verify OTP</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- login-area end -->
