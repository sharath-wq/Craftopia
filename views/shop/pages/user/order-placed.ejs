<div class="checkout-area pt-5 pb-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="text-center">
                    <h2 class="display-3 text-success mb-4">Thank you for your order!</h2>
                    <div class="order-details mt-4">
                        <p class="lead"><strong class="text-success">Order Details:</strong></p>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <strong>Order ID:</strong> <span class="text-primary"><%= order.orderNumber %></span>
                            </li>
                            <li class="mb-2">
                                <strong>Total Amount:</strong> <span class="text-primary">â‚¹ <%= order.totalAmount %></span>
                            </li>
                            <li class="mb-2">
                                <strong>Delivery Address:</strong>
                                <span class="text-primary"
                                    ><%= address.street %>, <%= address.city %>, <%= address.state %></span
                                >
                            </li>
                            <li class="mb-2">
                                <strong>Estimated Arrival Date:</strong>
                                <span class="text-primary">
                                    <% const inputDate = order.estimatedDelivery; %> <% const dateObject = new
                                    Date(inputDate); %> <% const options = { year: 'numeric', month: 'long', day: 'numeric'
                                    }; %> <%= new Intl.DateTimeFormat('en-US', options).format(dateObject) %>
                                </span>
                            </li>
                            <li class="mb-2">
                                <strong>Payment Method:</strong>
                                <span class="text-primary"><%= order.paymentMethod %></span>
                            </li>
                        </ul>
                    </div>
                    <div class="quickview-btn-cart mt-3">
                        <a class="btn-hover-black" href="/">Continue Shopping</a>
                        <a class="btn-hover-black" href="/orders">View Orders</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
