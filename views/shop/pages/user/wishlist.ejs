<!-- shopping-cart-area start -->
<div class="cart-main-area pt-95 pb-100 wishlist">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <%- include('../../partials/flash-message.ejs') %>
                <h1 class="cart-heading">wishlist</h1>
                <form action="#">
                    <div class="table-content table-responsive">
                        <table class="table-striped">
                            <thead>
                                <tr>
                                    <th>images</th>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (populatedWishlist.length) { %> <% populatedWishlist.forEach(product => { %>
                                <tr>
                                    <td class="product-thumbnail">
                                        <a href="/product/<%= product._id %>"
                                            ><img
                                                style="width: 100px; height: 100px"
                                                class="img-thumbnail"
                                                src="<%= product.images[0].thumbnailUrl %>"
                                                alt=""
                                        /></a>
                                    </td>
                                    <td class="product-name">
                                        <a href="/product/<%= product._id %>"><%= product.title %></a>
                                        <p class="text-danger"><%= product.isDeleted ? 'Currently Not Available' : ""%></p>
                                    </td>
                                    <td class="product-price-cart">
                                        <span class="amount">â‚¹ <%= product.salePrice %></span>
                                    </td>
                                    <td class="product-remove">
                                        <a onclick="addToCart(`<%= product._id %>`)" class="btn btn-sm btn-success h-auto">
                                            <i class="pe-7s-cart text-white fw-bolder"></i>
                                        </a>

                                        <a class="btn btn-sm btn-danger h-auto" href="/wishlist/remove/<%= product._id %>"
                                            ><i class="pe-7s-close text-bg-danger text-white fw-bolder text-bg-danger"></i
                                        ></a>
                                    </td>
                                </tr>
                                <% }) %> <% } else { %> No Items in wishlist <% } %>
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
